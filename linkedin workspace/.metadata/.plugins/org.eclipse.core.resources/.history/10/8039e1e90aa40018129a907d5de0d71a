package data;

import javax.persistence.EntityManager;
import javax.persistence.Query;

import model.Administrator;

public class userConnection {
	
	public static String login(String email, String password) {
        EntityManager em = DBaccess.getEmFactory().createEntityManager();
        String qString = "SELECT u FROM Administrator u WHERE u.Email = :email AND u.Password = :pass";
        Query q = em.createQuery(qString);
        q.setParameter("email", email);
        q.setParameter("password", password);
        String result = null;
        try {
        	Administrator admin = (Administrator) q.getSingleResult();
        	if (email.equalsIgnoreCase(admin.getEmail())&&password.equals(admin.getPassword())) {
  		      result="success";
  		   }
        } catch (Exception e) {
            return null;
        } finally {
            em.close();
        }
        
        return result;
    }
}
